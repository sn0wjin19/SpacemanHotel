<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/navHeader_layout"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:padding="10dp"
    android:background="?attr/colorPrimary">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/icon_image"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/test"
        android:layout_centerInParent="true">
    </de.hdodenhof.circleimageview.CircleImageView>

    <Button
        android:id="@+id/navHeader_button_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/self_introduction_content"
        android:background="#00FFFFFF"
        android:text="点击登录"
        android:textAlignment="viewStart"
        android:textAllCaps="false"
        android:textColor="?attr/colorAccent">
    </Button>
    <TextView
        android:id="@+id/self_introduction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:text="个性签名: "
        android:textColor="@color/mr_cast_meta_default_text_color"
        android:textStyle="bold"></TextView>

    <TextView
        android:id="@+id/self_introduction_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/self_introduction"
        android:layout_toRightOf="@+id/self_introduction"
        android:text="nmsl"
        android:textColor="@color/mr_cast_meta_default_text_color"></TextView>


</RelativeLayout>